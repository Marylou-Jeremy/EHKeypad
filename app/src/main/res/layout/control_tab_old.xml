<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="BPM"
            android:textColor="@color/myLightBlue" />

        <TextView
            android:id="@+id/bpm_control_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="monospace"
            android:text="000"
            android:textAlignment="center"
            android:textColor="#212121"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:backgroundTint="@android:color/holo_blue_dark" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

        <RadioButton
            android:id="@+id/radio_off"
            android:layout_width="0dp"
            android:buttonTint="@color/myRed"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <ProgressBar
            android:id="@+id/progressBar8"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:backgroundTint="@android:color/holo_blue_dark" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:gravity="center">

        <TextView
            android:id="@+id/switch_label_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <RadioButton
            android:id="@+id/radio_0"
            android:layout_width="0dp"
            android:buttonTint="@color/myRed"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

        <LinearLayout
            android:id="@+id/layout_switches_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">


        <SurfaceView
            android:id="@+id/block0_0"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.1" />

        <SurfaceView
            android:id="@+id/block0_1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.1" />

        <SurfaceView
            android:id="@+id/block0_2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.1" />

        <SurfaceView
            android:id="@+id/block0_3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.1" />

        <SurfaceView
            android:id="@+id/block0_4"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.1" />

        <SurfaceView
            android:id="@+id/block0_5"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.1" />

        <SurfaceView
            android:id="@+id/block0_6"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.1" />

        <SurfaceView
            android:id="@+id/block0_7"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.1" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10"
        android:gravity="center">

        <TextView
            android:id="@+id/switch_label_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <RadioButton
            android:id="@+id/radio_1"
            android:layout_width="0dp"
            android:buttonTint="@color/myRed"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" />

        <SurfaceView
            android:id="@+id/block1_0"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.1" />

        <SurfaceView
            android:id="@+id/block1_1"
