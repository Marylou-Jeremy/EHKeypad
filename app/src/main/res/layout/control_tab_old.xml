            android:gravity="center"
            android:text="6" />

        <Button
            android:id="@+id/key6"
            style="@android:style/ButtonBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_blue_dark"
